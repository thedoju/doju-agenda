interface Note \{ id: string; text: string \}\
\
const NotesSection = () => \{\
  const [notes, setNotes] = useState<Note[]>(() => \{ const saved = localStorage.getItem('doju-notes'); return saved ? JSON.parse(saved) : [\{ id: '1', text: 'Follow up with Magnetic about color palette' \}, \{ id: '2', text: 'Book flights for design conference' \}] \})\
