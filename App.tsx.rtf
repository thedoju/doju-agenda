      </div>\
      <div className="week-days">\{days.map((day) => \{ const dayEvents = getEventsForDay(day); return <div key=\{day.toISOString()\} className=\{`week-day $\{isToday(day) ? 'today' : ''\} $\{selectedDay && isSameDay(day, selectedDay) && !isToday(day) ? 'selected' : ''\}`\} onClick=\{() => onSelectDay(day)\}><span className="day-name">\{format(day, 'EEE')\}</span><span className="day-number">\{format(day, 'd')\}</span>\{dayEvents.length > 0 && <div className="day-dots">\{dayEvents.slice(0, 3).map((_, i) => <div key=\{i\} className="day-dot" />)\}</div>\}</div> \})\}</div>\
